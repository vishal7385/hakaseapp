<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Feedbacks</h1>

  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
  <table class="table table-striped" id="myTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rating</th>
        <th>Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.name %></td>
          <td><%= feedback.rating %></td>
          <td><%= feedback.Message %></td>
          <td><%= link_to 'Show', feedback, class: 'btn btn-success'%></td>
          <td><%= link_to 'Edit', edit_feedback_path(feedback), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Feedback', new_feedback_path, class: 'btn btn-primary' %>
</div>